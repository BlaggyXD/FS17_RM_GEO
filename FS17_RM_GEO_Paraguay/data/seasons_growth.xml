            <fruit fruitName="maize"  normalGrowthState="1" normalGrowthMaxState="2" />
            <fruit fruitName="potato" normalGrowthState="1" normalGrowthMaxState="2" />
            <fruit fruitName="barley" normalGrowthState="3" normalGrowthMaxState="4" extraGrowthMinState="5" extraGrowthMaxState="5" extraGrowthFactor="2" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="wheat"  normalGrowthState="3" normalGrowthMaxState="4" extraGrowthMinState="5" extraGrowthMaxState="5" extraGrowthFactor="2" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="rape"   normalGrowthState="3" normalGrowthMaxState="4" extraGrowthMinState="5" extraGrowthMaxState="5" extraGrowthFactor="2" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="soybean" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="sunflower" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="poplar" normalGrowthState="1" normalGrowthMaxState="MAX_STATE" />
            <fruit fruitName="oilseedRadish" normalGrowthState="1" normalGrowthMaxState="MAX_STATE" />
            <fruit fruitName="sugarCane" normalGrowthState="1" normalGrowthMaxState="6" />
