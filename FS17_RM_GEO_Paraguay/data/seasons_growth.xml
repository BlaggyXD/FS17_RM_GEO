            <fruit fruitName="potato" setGrowthState="1" setGrowthMaxState="5" desiredGrowthState="CUT" normalGrowthState="6" />
            <fruit fruitName="barley" setGrowthState="1" desiredGrowthState="CUT" />
            <fruit fruitName="wheat"  setGrowthState="1" desiredGrowthState="CUT" />
